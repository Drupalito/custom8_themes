{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}
{% if breadcrumb %}
<div class="breadcrumb" role="navigation" aria-labelledby="{{ 'Breadcrumb'|t }}">
  <p class="mvn">
    <span class="a11y">{{ 'You are here&nbsp;:'|t }}</span>
    {% for item in breadcrumb %}
      <span {{ item.attributes }}>
        {% if item.url %}
          <a href="{{ item.url }}"><span>{{ item.text }}</span></a>
        {% else %}
          <strong>{{ item.text }}</strong>
        {% endif %}
      </span>
    {% endfor %}
  </p>
</div>
{% endif %}
