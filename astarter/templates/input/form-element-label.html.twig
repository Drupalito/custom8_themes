{#
/**
 * @file
 * Default theme implementation for a form element label.
 *
 * Available variables:
 * - element: an input element.
 * - title: The label's text.
 * - title_display: Elements title_display setting.
 * - description: element description.
 * - required: An indicator for whether the associated form element is required.
 * - attributes: A list of HTML attributes for the label.
 *
 * @see template_preprocess_form_element_label()
 *
 * @ingroup templates
 */
#}
{%
  set classes = [
    'control-label',
    title_display == 'after' ? 'option',
    title_display == 'invisible' ? 'element-invisible',
    required ? 'form-required',
    required ? 'js-form-required',
  ]
%}
{% if title is not empty or required %}
  <label{{ attributes.addClass(classes) }}>{{ element }}{{ title }}
    {% if required and title_display == 'before' or title_display == 'after'%}
      <abbr class="form-required" title="{{ 'This field is required.'|t }}">*</abbr>
    {% endif %}
  </label>
{% endif %}
